# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Custom OpenAI Configuration
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1500
OPENAI_TEMPERATURE=0.8

# Anonymous + Account Mode Configuration
NEXT_PUBLIC_USE_ANONYMOUS_MODE=true

# Stripe Configuration (Primary Payment Provider)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
NEXT_PUBLIC_STRIPE_PRICE_ID_PRO_MONTHLY=price_your_pro_monthly_price_id_here

# Database Configuration (PostgreSQL for PRO accounts only)
DATABASE_URL=postgresql://user:password@localhost:5432/spinverse_pro
DATABASE_MAX_CONNECTIONS=20
DATABASE_SSL_MODE=prefer

# Security Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here_32_chars_min
ENCRYPTION_KEY=your_encryption_key_for_sensitive_data_32_chars

# Error Logging & Analytics
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
FROM_EMAIL=noreply@spinverse.app

# Rate Limiting Configuration
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Feature Flags
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false
NEXT_PUBLIC_MAINTENANCE_MODE=false

# Legacy Clerk Configuration (for migration period only)
# NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
# CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here